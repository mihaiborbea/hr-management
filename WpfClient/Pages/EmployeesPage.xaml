<Page x:Class="WpfClient.Pages.EmployeesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfClient.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmployeesPage"
      Loaded="Page_Loaded">

    <Grid>
        <StackPanel HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Width="300">
            <TextBlock Text="Angajati" HorizontalAlignment="Left" FontSize="20" Margin="10,10,10,0" />
            <Grid>
                <DataGrid Name="DG1" ItemsSource="{Binding}" AutoGenerateColumns="False" >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="First Name"  Binding="{Binding Firstname}"/>
                        <DataGridTextColumn Header="Last Name" Binding="{Binding Lastname}" />
                        <DataGridHyperlinkColumn Header="Email" Binding="{Binding Email}" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </StackPanel>
    </Grid>
</Page>

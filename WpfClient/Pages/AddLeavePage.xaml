<Page x:Class="WpfClient.Pages.AddLeavePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfClient.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddLeavePage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Adauga Concediu" HorizontalAlignment="Center" FontSize="26" />
            <TextBlock Text="Angajat:" Margin="0,5,0,0" />
            <TextBlock x:Name="tbxEmployee" Padding="5" />
            <TextBlock Text="De la:" Margin="0,5,0,0" />
            <DatePicker x:Name="tbxStart" Padding="5" />
            <TextBlock Text="Pana la:" Margin="0,5,0,0" />
            <DatePicker x:Name="tbxEnd" Padding="5" />
            <TextBlock Text="Tip concediu:" Margin="0,5,0,0" />
            <ComboBox x:Name="tbxLeaveType" Padding="5" />
            <Button x:Name="btnAdd" Content="ADAUGA" Padding="5" Margin="0,5,0,0" Click="BtnAdd_Click" />
            <Button x:Name="btnBack" Content="INAPOI" Padding="5" Margin="0,5,0,0" Click="BtnBack_Click" />
        </StackPanel>
    </Grid>
</Page>
